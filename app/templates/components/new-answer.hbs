{{#if addNewAnswer}}
<h1>Your answer</h1>
  <div>
    <form>
      <div class="form-group name">
        <label for="Name">Your Name</label> {{input value=name id="name" class="form-control"}}
      </div>
      <div class="form-group">
        <h5>Answer</h5>
        <label for="answer"></label>
        {{textarea rows="10" cols="80" value=answer id="answer"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}} class="btn btn-info btn-lg">Add Your Answer</button>
{{/if}}
